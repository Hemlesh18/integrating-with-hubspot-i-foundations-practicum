doctype html 
html 
    head 
        title= `${title}`
        meta(name="viewport" content="width=device-width, initial-scale=1")
        link(rel="stylesheet", href="/css/style.css")
    body
        h1 Add A simba 
        form(action="/update-cobj" method="post")
            label(for="simba") Simba Name:
            input(type="text" name="simba")
            label(for="simba_movie") Simba Movie:
            input(type="text" name="simba_movie")
            label(for="simba_type") Simba Type:
            input(type="text" name="simba_type")
            label(for="simba_is_a_dog") Is a dog or not:
            input(type="text" name="simba_is_a_dog")
            input(type="submit" value="Submit")
        a( href="/") Back to home